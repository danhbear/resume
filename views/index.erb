<html>
  <head>
    <title><%= title %></title>
    <meta name="author" content="<%= author %>">
    <meta charset="utf-8">
    <link rel="shortcut icon" href="favicon.ico">

    <!-- http://lesscss.org/ -->
    <link href="print.less" media="print" rel="stylesheet/less" type="text/css" />
    <link href="style.less" media="screen" rel="stylesheet/less" type="text/css" />
    <% if print_pdf %>
      <link href="pdf.less" rel="stylesheet/less" type="text/css" />
    <% end %>
    <script src="less-1.1.3.min.js" type="text/javascript"></script>
    <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.0/css/bootstrap-combined.min.css" rel="stylesheet">
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.0.2/css/font-awesome.css" rel="stylesheet">
    <link href="overrides.css" media="all" rel="stylesheet" />

    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', '<%= key %>']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>
  </head>
  <body>
    <div id="resume">
      <small class="download">View resume: 
        <% if print_pdf %>
          <a href="<%= html_url %>" target="_blank">online</a> | 
        <% else %>
          <a href="<%= pdf_filename %>" target="_blank">pdf</a> | 
        <% end %>
        <a href="<%= filename %>" target="_blank">markdown</a> | 
        <a href="<%= git_url %>" target="_blank">git</a></small>

      <%= resume %>
    </div>
  </body>
